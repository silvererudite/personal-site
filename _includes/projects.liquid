<div class="project-list">
  <ul class="list-unstyled">
    {% for project in site.projects %}
      <li class="mb-3">
        <h2 class="project-title">
          <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}">
            {{ project.title }}
          </a>
        </h2>
        {% if project.description %}
          <p class="project-description">{{ project.description }}</p>
        {% endif %}
        <div class="project-links">
          {% if project.github %}
            <a href="{{ project.github }}" class="mr-2" title="Code Repository">
              <i class="fa-brands fa-github"></i> GitHub
            </a>
          {% endif %}
          {% if project.github_stars %}
            <span class="github-stars" title="GitHub Stars">
              <i class="fa-solid fa-star"></i> {{ project.github_stars }} stars
            </span>
          {% endif %}
        </div>
      </li>
    {% endfor %}
  </ul>
</div>
